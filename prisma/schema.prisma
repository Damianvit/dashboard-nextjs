generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String @unique
  password String
}

model Invoice {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  customerId String @db.ObjectId
  amount     Int
  status     String
  date       DateTime
}

model Customer {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String
  imageUrl String
}

model Revenue {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  month   String @unique
  revenue Int
}
